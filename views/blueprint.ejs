<!DOCTYPE html>
<html>
<head>
  <title><%= xmlFiles.name %></title>
  <%- include('scripts/voteFunction') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">  <style>
    .preview {
      max-height: 200px;
      max-width: 200px;
    }
  </style>
</head>
<body>

  <%- include('navbar') %>

<div class="row justify-content-center">

<div class="d-flex justify-content-center">
	<%- include('donate') %>
</div>

<div class="col-lg-3 col-md-4 col-sm-6 mb-4 text-center">
  <div class="file card">
    <a href="blueprint<%= xmlFiles.xmlFilePath.replace("uploads/","") %>" target="_blank" rel="noopener noreferrer">
      <img src="<%= xmlFiles.imageFilePath %>" class="card-img-top preview" alt="Preview Image">
    </a>
    <div class="card-body">
      <h5 class="card-title"><%= xmlFiles.name %></h5>
      <p class="card-text">Votes: <span id="<%= xmlFiles.xmlFilePath %>-vote"><%= xmlFiles.votes %></span></p>
		<button onclick="download('<%= xmlFiles.xmlFilePath %>','<%= xmlFiles.name %>')" class="btn btn-primary">Download</button>
      <button onclick="vote('<%= xmlFiles.xmlFilePath %>', <%= xmlFiles.votes %>, '<%= xmlFiles.xmlFilePath %>-vote')" class="btn btn-primary">Vote</button>
	  <br/>
	  <button style="margin-top:10px" onclick="report('<%= xmlFiles.xmlFilePath %>', <%= xmlFiles.votes %>, '<%= xmlFiles.xmlFilePath %>-vote')" class="btn btn-danger">Report</button>
    
	</div>
  </div>
</div>
</div>

</body>
</html>
